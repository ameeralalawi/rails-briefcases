<% content_for :after_js do %>
 <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.6.8-fix/jquery.nicescroll.min.js"></script>

 <script type="text/javascript">

  $(document).ready(function() {

       //link to scroll section
      $('li > ul > li > a').click(function(){
        console.log("beatl");
        $.fn.fullpage.moveTo( $(this).attr('href') );

        //Toggle Class
        $(".sub-active").removeClass("sub-active");
        $(this).closest('li').addClass("sub-active");
        var theClass = $(this).attr("sub-class");
        $('.'+theClass).parent('li').addClass('active');
      });

       $('li').on('click', function () {
            console.log("beatl");
            $("li").removeClass("active")
            $(this).toggleClass('active');
        });

  });

     $(document).ready(function () {
         $("#sidebar").niceScroll({
             cursorcolor: '#53619d',
             cursorwidth: 4,
             cursorborder: 'none'
         });

         // $(".sidebar ul li").on("click", function(e){
         //        $(".sidebar ul li").removeClass("active");
         //        $(this).addClass("active");
         //  };

         $('#sidebarCollapse').on('click', function () {
             // $('#sidebar, #content').toggleClass('active');
             $('#sidebar').toggleClass('active');
             $('.collapse.in').toggleClass('in');
             $('a[aria-expanded=true]').attr('aria-expanded', 'false');
         });
     });
 </script>
 <% end %>
