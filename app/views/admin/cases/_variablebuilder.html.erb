        document.loadDraggables();
      } else {
        alert("INVALID VARIABLE \n \n Please ensure your variable has a name and a valid expression.")
      }
    });

    $("#global-save-3").on('click', function(event) {
      console.log("I RAN")
      var myvars = {};
      var ul = document.getElementById("shut");
