<div class="container app-screen-show" id="profile-container">

  <div class="row" id="profile_content">
    <div id="profile-picture" class="col-sm-4">
      <% if @user.facebook_picture_url %>
        <%= image_tag @user.facebook_picture_url , id: "profile-icon", class: "avatar-large" %>
      <% else %>
       <%= image_tag 'user_profile_picture.png', id: "profile-icon", class: "avatar-large" %>
      <% end %>
    </div>

    <div class ="col-sm-8" id="profile_info">
      <div id="page_title">
        <h1> <%= @user.first_name %> <%= @user.last_name %></h1>
        <h3> <%= @user.title %> </h3>
      </div>
      <div class="container">
        <h5 class="row"><strong>Email:</strong> <%= @user.email %></h5>
        <h5 class="row"><strong>On BriefCases since </strong><%= @user.created_at.strftime("%B %-d, %Y") %></h5>
      </div>
    </div>
  </div>

  <div class="row" style="margin-top: 30px;">
    <div class ="col-sm-8 col-sm-offset-4">
      <a class="btn btn-CTA" href="/users/edit" style= "margin: 8px">EDIT PROILE</a>
      <a class="btn btn-action" href="/admin/cases" style= "margin: 8px">MY CASES</a>
    </div>
  </div>


</div>
